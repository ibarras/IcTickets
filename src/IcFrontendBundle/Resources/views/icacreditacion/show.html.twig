{% extends 'base_frontend.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-body table-responsive">
                            <h4>SOLICITUD DE ANTICIPO</h4>
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                <tr>
                                    <th>Tipo de Acreditacion</th>
                                    <th>Autorizado Por:</th>
                                    <th>Solicitante</th>
                                    <th>Nombre en Acreditacion</th>
                                    <th>Puesto</th>
                                    <th>Patrocinador</th>
                                    <th>Fotografia</th>
                                    <th>Descripcion</th>
                                    <th>Codigo</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for icAcreditacion in icAcreditacions %}
                                    <tr>
                                        <td>{{ icAcreditacion.idAcreditacionTipo.nombre }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.idFosPerfil }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.solicitante }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.nombreEnAcreditacion }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.puesto }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.patrocinador }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.fotografia }}</td>
                                        <td>{{ icAcreditacion.idAcreditacion.descripcion }}</td>
                                        <td>{{ icAcreditacion.codigo }}</td>
                                        <td>
                                            <a class="btn btn-default" href="{{ path('acreditacion_show', { 'id': icAcreditacion.id }) }}"><em class="fa fa-file-pdf-o"></em></a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
