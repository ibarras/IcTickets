
{% extends 'base_frontend.html.twig' %}

{% block content %}

    {{ form_start(form) }}
    <div class="container">
        <div class="row">

            <div class="col-md-12">

                <div class="row">
                    <div class="col-md-offset-2 col-md-8">


                        <div class="panel">

                            <div class="panel-heading custom-header-panel">
                                <div>
                                    <h3>Servicios Profesionales S.A de C.V</h3>
                                    <h2 class="panel-title roboto">Solicitud de Acreditaci&oacute;n</h2>
                                </div>
                            </div>


                            <div class="panel-body">

                                    <div class="form-group">

                                        <div class="col-sm-6">
                                            {{ form_row(form.solicitante) }}
                                        </div>

                                        <div class="col-sm-6">
                                            {{ form_row(form.nombreEnAcreditacion) }}
                                        </div>

                                        <div class="col-sm-6">
                                            {{ form_row(form.puesto) }}
                                        </div>

                                    </div>

                                    <div class="form-group">


                                        <div class="col-sm-6">
                                            {{ form_row(form.patrocinador) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_row(form.icImagen) }}
                                        </div>


                                        <div class="col-sm-6">
                                            {{ form_row(form.descripcion) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-sm-6">
                                            {{ form_row(form.cantidad) }}
                                        </div>

                                        <div class="col-sm-6">
                                            {{ form_row(form.idFosPerfil) }}
                                        </div>

                                        <div class="col-sm-6" >
                                            {{ form_row(form.idAcreditacionTipo) }}
                                        </div>
                                    </div>

                                    </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-4">
                                <input type="submit" class="btn btn-danger " value="Enviar Solicitud" />
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
