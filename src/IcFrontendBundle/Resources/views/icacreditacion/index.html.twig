{% extends 'base_frontend.html.twig' %}



{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('acreditacion_exporta') }}" >EXPORTAR</a>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-body table-responsive">
                            <h4>SOLICITUD DE ACREDITACION</h4>
                            <table class="table table-striped table-bordered table-list">
                                <thead>
                                <tr>
                                    <th>Folio</th>
                                    <th>Autorizado</th>
                                    <th>Solicitante</th>
                                    <th>Nombre en Acreditacion</th>
                                    <th>Puesto</th>
                                    <th>Patrocinador</th>
                                    <th>Fotografia</th>
                                    <th>Descripcion</th>
                                    <th>Cantidad</th>
                                    <th>Acciones</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for icAcreditacion in icAcreditacions %}
                                    <tr>
                                        <td>{{ icAcreditacion.id }}</td>
                                        <td>{{ icAcreditacion.idFosPerfil }}</td>
                                        <td>{{ icAcreditacion.solicitante }}</td>
                                        <td>{{ icAcreditacion.nombreEnAcreditacion }}</td>
                                        <td>{{ icAcreditacion.puesto }}</td>
                                        <td>{{ icAcreditacion.patrocinador }}</td>
                                        <td><img src="http://procesos.xolos.com.mx/uploads/imagen/acreditaciones/{{   icAcreditacion.fotografia }}" width="40px" height="50px" />.</td>
                                        <td>{{ icAcreditacion.descripcion }}</td>
                                        <td>{{ icAcreditacion.cantidad }}</td>
                                        <td>
                                            {% if icAcreditacion.cantidad == 1 %}
                                            <a class="btn btn-default" href="{{ path('acreditacion_show', { 'id': icAcreditacion.id }) }}"><em class="fa fa-file-pdf-o"></em></a>
                                            {% else %}
                                                <a class="btn btn-default" href="{{ path('acreditacion_lista', { 'id': icAcreditacion.id }) }}"><em class="fa fa-eye"></em></a>
                                            {% endif %}

                                            <a class="btn btn-danger" href="{{ path('acreditacion_edit', { 'id': icAcreditacion.id }) }}"><em class="fa fa-pencil"></em></a>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <ul>
                            <li>
                                <a class="btn btn-danger" href="{{ path('acreditacion_new') }}"><em class="fa fa-plus"></em>AGREGAR</a>
                            </li>
                        </ul>

                        <div class="navigation">
                            {{ knp_pagination_render(icAcreditacions) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
