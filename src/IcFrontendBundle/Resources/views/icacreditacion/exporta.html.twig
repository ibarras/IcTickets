{% extends 'base_frontend.html.twig' %}

{% block content %}

    <div class="col-sm-12 ">

        <div class="panel-heading custom-header-panel">
            <div class="col-sm-3" align="left">
                <img class="img-responsive" width="40%" height="40%" src="/bundles/icfrontend/images/l-t.png">
            </div>
            <div align="left">
                <h3>Servicios Profesionales S.A de C.V</h3>
                <h2 class="panel-title roboto">Listado de Acreditaciones</h2>
            </div>
        </div>


        <div class="panel-body">
                <a href="javascript:history.back()">Regresar</a>

            <table class="table table-hover table-bordered">


        <div class="col-md-12">

            <form class="form-inline" role="form" action="{{ path('acreditacion_exporta') }}" method="post">
                <div class="form-group">
                    <label class="sr-only" for="exampleInputEmail2">Email address</label>
                    <input name="folio-inicial"  type="text" class="form-control" id="folio-inicial" placeholder="Folio Inicio">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="exampleInputPassword2">Password</label>
                    <input name="folio-final" type="text" class="form-control" id="folio-final" placeholder="Folio Final">
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="exportar">Exportar
                    </label>
                </div>

                <button type="submit" class="btn btn-default">BUSCAR</button>
            </form>

        </div>

        <div class="col-md-12">
            {% if  icAcreditacions is defined %}
            <table class="table table-striped table-bordered table-list">
                <thead>
                <tr>
                    <th>Folio</th>
                    <th>Autorizado</th>
                    <th>Solicitante</th>
                    <th>Nombre en Acreditacion</th>
                    <th>Puesto</th>
                    <th>Patrocinador</th>
                    <th>Fotografia</th>
                    <th>Codigo</th>
                    <th>Acreditacion</th>
                    <th>Cantidad</th>
                </tr>
                </thead>

                <tbody>
                {% for icAcreditacion in icAcreditacions %}
                    <tr>
                        <td>{{ icAcreditacion.idAcreditacion.id }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.idFosPerfil }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.solicitante }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.nombreEnAcreditacion }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.puesto }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.patrocinador }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.fotografia }}</td>
                        <td>{{ icAcreditacion.codigo }}</td>
                        <td>{{ icAcreditacion.idAcreditacionTipo.nombre }}</td>
                        <td>{{ icAcreditacion.idAcreditacion.cantidad }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}

</div>

{% endblock %}