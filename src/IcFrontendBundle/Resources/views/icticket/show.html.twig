{% extends 'base_frontend.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="panel-heading custom-header-panel">
                    <div class="col-sm-3" align="left">
                        <img class="img-responsive" width="40%" height="40%" src="/bundles/icfrontend/images/l-t.png">
                    </div>
                    <div align="left">
                        <h3>Servicios Profesionales S.A de C.V</h3>
                        <h2 class="panel-title roboto">Detalle de Solicitud</h2>
                    </div>
                </div>
                <div class="background-detail panel-body">
                    <form>
                        <div class="form-group">
                            <div class="col-sm-6 col-md-6">
                                <label for="text">Estatus:</label>
                                <div align="center" class="renglon">
                                    <p class="form-control-static">{{ entity.idEstatus.getNombre() }}</p>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <label for="text">Fecha:</label>
                                <div align="center" class="renglon">
                                    <p class="form-control-static">{{ entity.fechaCreado | date('d-m-Y') }}</p>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <label for="text">Solicitante:</label>
                                <div align="center" class="renglon">
                                    <p class="form-control-static">{{ entity.idUsuarioSolicitante.Nombre() }}</p>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <label for="text">Atendido por:</label>
                                <div align="center" class="renglon">
                                    {% if asignado %}
                                        <p class="form-control-static">{{ asignado.idUsuarioAsignado.Nombre() }}</p>
                                    {% else %}
                                        <p class="form-control-static">N/A</p>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <label for="text">Problema:</label>
                                <div align="center" class="renglon">
                                    <p class="form-control-static">{{ entity.titulo }}</p>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <label for="text">Descripción del problema:</label>
                                <div class="renglon">
                                    <div class="panel panel-body">{{ entity.descripcionProblema }}</div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <label for="text">Fotografía del problema:</label>
                                <div class="">
                                    <div class="panel panel-body">
                                        {% if entity.imagen == null %}
                                            <p>N/A</p>
                                        {% else %}
                                            <img class="img-responsive" src="{{ constant('IcFrontendBundle\\IcHelpers\\IcConfig::URL_IMAGENES_TICKET') ~  entity.imagen }}"  />
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-12">
                                <label for="text">Comentarios:</label>
                                <div class="">
                                    {% if comentarios %}
                                    <div id="selector1" class="panel panel-body">
                                        {% for comentario in comentarios %}
                                            {% if comentario.imagen is empty %}
                                                <div class="media msg">
                                                    {#<a class="pull-left" href="#">#}
                                                    {#<img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 32px; height: 32px;" src="data:image/png;base64,">#}
                                                    {#</a>#}
                                                    <div class="media-body">
                                                        <small class="pull-right time"><i class="fa fa-calendar"></i> {{ comentario.fechaCreado | date('m-d-Y') }}</small>

                                                        <h5 class="media-heading">{{ comentario.idUsuario.Nombre() }}:</h5>
                                                        <p class="col-lg-10">{{ comentario.mensaje }}</p>
                                                        {#{% if comentario.imagen == null %}#}

                                                        {#{% else %}#}
                                                        {#<a class="col-lg-6 col-md-6 col-sm-12 col-xs-12" href="{{ constant('IcFrontendBundle\\IcHelpers\\IcConfig::URL_IMAGENES_COMENTARIOS') ~  comentario.imagen }}">#}
                                                            {#<img class="img-responsive" src="{{ constant('IcFrontendBundle\\IcHelpers\\IcConfig::URL_IMAGENES_COMENTARIOS') ~  comentario.imagen }}" alt="{{ comentario.mensaje }}" />#}
                                                        {#</a>#}
                                                        {#{% endif %}#}
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="media msg item" data-src="{{ constant('IcFrontendBundle\\IcHelpers\\IcConfig::URL_IMAGENES_COMENTARIOS') ~  comentario.imagen }}">
                                                    {#<a class="pull-left" href="#">#}
                                                    {#<img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 32px; height: 32px;" src="data:image/png;base64,">#}
                                                    {#</a>#}
                                                    <div class="media-body">
                                                        <small class="pull-right time"><i class="fa fa-calendar"></i> {{ comentario.fechaCreado | date('m-d-Y') }}</small>

                                                        <h5 class="media-heading">{{ comentario.idUsuario.Nombre() }}:</h5>
                                                        <p class="col-lg-10">{{ comentario.mensaje }}</p>
                                                        {#{% if comentario.imagen == null %}#}

                                                        {#{% else %}#}
                                                        <a class="col-lg-6 col-md-6 col-sm-12 col-xs-12" href="{{ constant('IcFrontendBundle\\IcHelpers\\IcConfig::URL_IMAGENES_COMENTARIOS') ~  comentario.imagen }}">
                                                            <img class="img-responsive" src="{{ constant('IcFrontendBundle\\IcHelpers\\IcConfig::URL_IMAGENES_COMENTARIOS') ~  comentario.imagen }}" alt="{{ comentario.mensaje }}" />
                                                        </a>
                                                        {#{% endif %}#}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    {% else %}
                                    <div class="panel panel-body">
                                        <p>Sin comentarios aún.</p>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div align="center" class="col-md-12">
                    <a href="javascript:history.back()" class="btn btn-danger">Cerrar</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}