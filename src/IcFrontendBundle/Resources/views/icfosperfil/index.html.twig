                        <a class="btn btn-default" href="{{ path('icfosperfil_show', { 'idPerfil': f.id }) }}"><em
                                    class="fa fa-eye"></em></a>
                        {#<a class="btn btn-default" href="{{ path('icfosperfil_new', {'idPerfil': f.id } ) }}"><em class="fa fa-address-card-o"></em></a>#}
                        <a class="btn btn-danger" href="{{ path('icfosperfil_edit', { 'idPerfil': f.id }) }}"><em
                                    class="fa fa-pencil"></em></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    {% endblock %}


